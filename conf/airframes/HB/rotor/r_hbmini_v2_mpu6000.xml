      <!-- <define name="USE_BARO_BMP" value="1"/> -->
      <define name="USE_MOTOR_MIXING" value="1"/>
      <!--  AMS Test 2013/09 olri -->
      <define name="USE_I2C1"/>
      <!--
	  <define name="USE_AIRSPEED"/>
