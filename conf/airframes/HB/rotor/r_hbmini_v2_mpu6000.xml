    <!-- <define integer="16" name="GYRO_Q_SENS" value=" 1.24"/> -->
    <!-- <define integer="16" name="GYRO_R_SENS" value=" 0.91"/> -->


    <define name="ACCEL_X_NEUTRAL" value="-56" />
	  <define name="ACCEL_Y_NEUTRAL" value="26" />
